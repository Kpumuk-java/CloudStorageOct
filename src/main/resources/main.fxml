<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.app.javaFX.Controller">
    <HBox>
        <ComboBox />
        <TextField editable="false" HBox.hgrow="ALWAYS" />
        <Button text="Вверх" />
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />
    <HBox spacing="5">
        <Button maxWidth="Infinity" text="Копирование" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Перемещение" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Удалить" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" text="Выйти из программы" HBox.hgrow="ALWAYS" onAction="#btnExitAction" />
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
    </HBox>
</VBox>
